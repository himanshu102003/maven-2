<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">
<configuration>

  <!-- Define the checkstyle rules -->
  <module name="Checker">
    <!-- This module defines the set of checks that will be applied -->

    <!-- TreeWalker: Walk through the code to apply the checks -->
    <module name="TreeWalker">

      <!-- Indentation: Ensure 2 spaces for indentation -->
      <module name="Indentation">
        <property name="tabWidth" value="2"/>
      </module>

      <!-- Naming Convention: Enforce camelCase for variables and methods -->
      <module name="NamingConvention">
        <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
      </module>

      <!-- Javadoc: Require Javadoc on all public methods -->
      <module name="JavadocMethod">
        <property name="allowMissingParamTags" value="false"/>
        <property name="allowMissingReturnTags" value="false"/>
      </module>

      <!-- Avoid code duplication (e.g., duplicate methods) -->
      <module name="DuplicateCode">
        <property name="maxDuplicates" value="1"/>
      </module>

      <!-- Other useful checks -->
      <module name="LineLength">
        <property name="max" value="120"/>
      </module>
      
      <module name="FileTabCharacter"/>
      <module name="WhitespaceAround"/>

    </module>
  </module>
</configuration>
