<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">
<configuration>

  <!-- Define the checkstyle rules -->
  <module name="Checker">
    <!-- This module defines the set of checks that will be applied -->

    <!-- TreeWalker: Walk through the code to apply the checks -->
    
      <!-- Javadoc: Require Javadoc on all public methods -->

      <!-- Avoid code duplication (e.g., duplicate methods) -->
      <module name="DuplicateCode">
        <property name="maxDuplicates" value="1"/>
      </module>

      <!-- Other useful checks -->
      <module name="LineLength">
        <property name="max" value="120"/>
      </module>
      

    </module>
  </module>
</configuration>
