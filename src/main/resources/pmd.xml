<?xml version="1.0" encoding="UTF-8"?>
<ruleset xmlns="http://pmd.sourceforge.net/ruleset/1.0.0"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/1.0.0 http://pmd.sourceforge.net/ruleset-1.0.xsd"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <description>
        PMD ruleset to detect duplicate code fragments
    </description>

    <!-- Duplicate code detection -->
    <rule ref="rulesets/java/clone.xml">
        <properties>
            <property name="minimumTokens" value="20"/>
            <property name="threshold" value="100"/>
        </properties>
    </rule>

    <!-- Optional: Add more rules to enforce other coding standards -->
    <rule ref="rulesets/java/basic.xml"/>
</ruleset>
